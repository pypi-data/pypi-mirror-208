SOURCES := $(shell find . -name '*.go')

ifeq ($(shell uname),Darwin)
    GOOS = darwin
    GOARCH = amd64
    EXEEXT =
else ifeq ($(shell uname),Linux)
    GOOS = linux
    GOARCH = $(shell arch)
    EXEEXT =
else ifeq ($(shell uname),Windows_NT)
    GOOS = windows
    GOARCH = amd64
    EXEEXT = .exe
endif

TARGET := ./dist/{{ data.new_app_name }}_$(GOOS)_$(GOARCH)_v1/{{ data.new_app_name }}$(EXEEXT)

run: {{ data.new_app_name }}
	./{{ data.new_app_name }}

{{ data.new_app_name }}: $(TARGET)
	cp $< $@

$(TARGET): $(SOURCES)
	gofumpt -w $(SOURCES)
	go vet ./...
	GOOS=$(GOOS) GOARCH=$(GOARCH) goreleaser build --single-target --snapshot --clean

.PHONY: clean
clean:
	rm -f {{ data.new_app_name }}
	rm -f $(TARGET)
	rm -rf dist
