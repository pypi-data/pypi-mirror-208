#!$SHEBANG
# meta = { version = $VERSION }

import sys

try:
    from commitguard.precommit import run
    sys.exit(run())
except ImportError:
    print(
        "Error: commitguard is not installed. To force creating a commit without "
        "verification via commitguard run 'git commit --no-verify'.",
        file=sys.stderr,
    )
    sys.exit(1)
